extends ./layout/app
block contenido
    div.py-5
        h1.text-center.text.4xl.font-extrabold 
        div(class="flex flex-col md:flex-row items-center py-5 gap-4 text-gray-800")
            h2(class="text-sm uppercase text-gray-800 font-bold p-3 bg-white rounded-xl") Filter jobs

        
    div(class="mt-2 p-2 flex justify-evenly")
        section 
            div#content-books(class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4")
                each book in books.rows
                     div(class="bg-gray-300 border border-gray-300 rounded-lg p-4 w-[300px] shadow-md")
                        p(class="text-black text-lg mb-3")=book.book_name
                        p(class="text-black mb-2")=book.price
                        p(class="text-sm text-gray-600")=book.autor_name
                        p(class="text-sm text-gray-600")=book.category_name
                        div(class="flex gap-2 mt-4")
                            a(href=`/books/book/${book.id}` class="text-center w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-blue-100 text-blue-800") Editar
                            
                        

    